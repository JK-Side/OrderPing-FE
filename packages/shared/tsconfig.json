{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@order-ping/shared/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"] // 'import.meta.env' 자동완성을 위해 추가
  },
  "include": [
    "src",
    "../../apps/admin/src/utils/hooks/useAuth.ts",
    "../../apps/admin/src/utils/hooks/useAuthInit.ts",
    "../../apps/admin/src/utils/ts/auth.ts",
    "../../apps/admin/src/stores"
  ]
}
